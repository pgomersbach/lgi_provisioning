{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "provisioners": [
    {
        "type": "shell",
        "execute_command": "echo 'ec2-user' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
        "inline": [
            "sleep 30",
            "yum install -y -q https://dl.fedoraproject.org/pub/epel/epel-release-latest-${RH_MAJOR}.noarch.rpm 2>/dev/null",
            "yum update -y -q",
            "yum install -y -q ansible"
        ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible-playbook.yml"
    }
  ],

  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "RHEL-7.5_HVM_GA-*",
        "root-device-type": "ebs"
      },
      "owners": ["309956199498"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "packer-example {{timestamp}}",
    "launch_block_device_mappings": [{
      "device_name": "/dev/sda1",
      "volume_size": 8,
      "volume_type": "gp2",
      "delete_on_termination": true
    }]
  }]
}
